<div class="container text-start">
  <h1>All tasks</h1>
  <div class="form-check">
    <% @tasks.each do |task| %>
      <div>
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <h4 id="task-name"><%= link_to task.title, task_path(task), id: 'task-title'%></h4>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-light' %>
        <%= link_to "Delete",
                    task_path(task),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: 'btn btn-light' %>
        </div>
    <% end %>
  </div>
  <div class="new-task">
    <h4><%= link_to 'Add a new task', new_task_path, id: 'add-task'%></h4>
  </div>
</div>
